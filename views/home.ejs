<div class="modal fade" id="cadastroModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cadastro</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/cadastro" method="POST">
                    <div class="mb-3">
                        <label for="cadastroTipoUsuario" class="form-label">Tipo de Usuário</label>
                        <select class="form-control" id="cadastroTipoUsuario" name="tipoUsuario" required>
                            <option value="">Selecione</option>
                            <option value="professor">Professor</option>
                            <option value="aluno">Aluno</option>
                            <option value="admin">Administrador</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="cadastroIdentificacao" class="form-label">Identificação</label>
                        <input type="text" class="form-control" placeholder="Matrícula" id="cadastroIdentificacao" name="identificacao" required>
                    </div>
                    <div class="mb-3">
                        <label for="cadastroPassword" class="form-label">Senha</label>
                        <input type="password" class="form-control" placeholder="Senha" id="cadastroPassword" name="senha" required>
                    </div>
                    <div class="mb-3">
                        <label for="cadastroCategoria" class="form-label">Categoria</label>
                        <input type="text" class="form-control" id="cadastroCategoria" name="categoria">
                    </div>
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
