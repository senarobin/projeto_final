<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Personalização</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f5f5;
        }
        .container {
            max-width: 800px;
            margin-top: 50px;
        }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background-color: #4a90e2;
            color: white;
            border-radius: 15px 15px 0 0;
        }
        .form-label {
            font-weight: 600;
        }
        .btn-primary {
            background-color: #4a90e2;
            border: none;
        }
        .btn-primary:hover {
            background-color: #3a7bc8;
        }
        .color-preview {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: inline-block;
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2><i class="fas fa-palette me-2"></i>Personalização</h2>
            </div>
            <div class="card-body">
                <form id="personalizationForm">
                    <div class="mb-3">
                        <label for="theme" class="form-label">Tema</label>
                        <select class="form-select" id="theme">
                            <option value="light">Claro</option>
                            <option value="dark">Escuro</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="primaryColor" class="form-label">Cor Primária</label>
                        <input type="color" class="form-control form-control-color" id="primaryColor" value="#4a90e2">
                        <span class="color-preview" id="primaryColorPreview"></span>
                    </div>
                    <div class="mb-3">
                        <label for="fontSize" class="form-label">Tamanho da Fonte</label>
                        <input type="range" class="form-range" min="12" max="24" step="1" id="fontSize">
                        <span id="fontSizeValue">16px</span>
                    </div>
                    <button type="submit" class="btn btn-primary">Salvar Preferências</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('personalizationForm');
            const primaryColor = document.getElementById('primaryColor');
            const primaryColorPreview = document.getElementById('primaryColorPreview');
            const fontSize = document.getElementById('fontSize');
            const fontSizeValue = document.getElementById('fontSizeValue');

            primaryColor.addEventListener('input', function() {
                primaryColorPreview.style.backgroundColor = this.value;
            });

            fontSize.addEventListener('input', function() {
                fontSizeValue.textContent = this.value + 'px';
            });

            form.addEventListener('submit', function(e) {
                e.preventDefault();
                const theme = document.getElementById('theme').value;
                const color = primaryColor.value;
                const font = fontSize.value;

                // Aqui você faria uma chamada AJAX para salvar as preferências no servidor
                console.log('Preferências salvas:', { theme, color, font });
                alert('Preferências de personalização salvas com sucesso!');
            });
        });
    </script>
</body>
</html>